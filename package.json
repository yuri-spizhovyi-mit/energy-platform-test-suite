{
  "name": "energy-platform-test-suite",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest builders.spec",
    "test:api": "jest api",
    "test:kafka": "jest kafka",
    "test:redis": "jest message-queue",
    "test:websocket": "jest websocket",
    "test:performance": "jest performance",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm test && npm run test:e2e",
    "server": "ts-node --project tsconfig.server.json mock-server.ts",
    "server:dev": "nodemon --watch mock-server.ts --exec ts-node --project tsconfig.server.json mock-server.ts",
    "services:up": "docker-compose up -d",
    "services:down": "docker-compose down",
    "services:logs": "docker-compose logs -f",
    "services:kafka": "docker-compose up -d zookeeper kafka",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "testing",
    "energy-platform",
    "e2e",
    "performance",
    "kafka",
    "websocket"
  ],
  "author": "",
  "license": "ISC",
  "description": "Comprehensive test suite for Energy Platform",
  "devDependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/core": "^11.1.13",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/testing": "^11.1.13",
    "@types/autocannon": "^7.12.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "autocannon": "^8.0.0",
    "cors": "^2.8.6",
    "cypress": "^15.10.0",
    "eslint": "^8.57.0",
    "express": "^5.2.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "ioredis": "^5.9.2",
    "jest": "^30.2.0",
    "kafkajs": "^2.2.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.4.2",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
